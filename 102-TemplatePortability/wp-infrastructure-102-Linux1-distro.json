{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "A simple template intended to be run in N.Virginia (us-east-1) with a Linux (1) distro. Feel free to change the ami so that you can run this in a different Region",

	"Parameters": {
		"EnvironmentSize": {
			"Type": "String",
			"Default": "SMALL",
			"AllowedValues": [	"SMALL", "MEDIUM", "LARGE" ],
			"Description": "Select Environment Size (S,M,L)"
		}
	},
	"Mappings": {
		"RegionMap": {
			"us-east-1"     : { "AMALINUX": "ami-09479453c5cde9639" },
			"us-east-2"     : { "AMALINUX": "ami-023c8dbf8268fb3ca" },

			"us-west-1"     : { "AMALINUX": "ami-06ff511fea5db2c99" },
			"us-west-2"     : { "AMALINUX": "ami-0bb5806b2e825a199" },

      "sa-east-1"     : {	"AMALINUX": "ami-b777e4db"	},
			"ca-central-1"  : { "AMALINUX": "ami-eb20928f"  },

			"eu-west-1"     : { "AMALINUX": "ami-d41d58a7"  },
			"eu-west-2"     : { "AMALINUX": "ami-bfe0eadb"	},
      "eu-central-1"  : { "AMALINUX": "ami-0044b96f" 	},

			"ap-southeast-1": {	"AMALINUX": "ami-7243e611" 	},
			"ap-southeast-2": {	"AMALINUX": "ami-55d4e436"	},

      "ap-northeast-1": {	"AMALINUX": "ami-1a15c77b"	},
			"ap-northeast-2": {	"AMALINUX": "ami-a04297ce"	},

      "ap-south-1"    : {	"AMALINUX": "ami-cacbbea5"	}

		},
		"InstanceSize": {
			"SMALL" : { "EC2": "t2.micro",  "DB": "db.t2.micro" },
			"MEDIUM": { "EC2": "t2.small",  "DB": "db.t2.small" },
			"LARGE" : {	"EC2": "t2.medium",	"DB": "db.t2.medium" }
		}
	},
	"Resources": {
		"DB": {
			"Type": "AWS::RDS::DBInstance",
			"Properties": {
				"AllocatedStorage": 5,
				"StorageType" : "gp2",
				"DBInstanceClass": {"Fn::FindInMap" : ["InstanceSize", {"Ref" : "EnvironmentSize"}, "DB"]},
				"DBName": "wordpress",
				"Engine": "MySQL",
				"MasterUsername": "wordpress",
				"MasterUserPassword": "w0rdpr355"
			}
		},
		"EC2": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {"Fn::FindInMap" : ["RegionMap", {"Ref" : "AWS::Region"}, "AMALINUX"]},
				"InstanceType": {"Fn::FindInMap" : ["InstanceSize", {"Ref" : "EnvironmentSize"}, "EC2"]}
			}
		},
		"S3": {
			"Type": "AWS::S3::Bucket"
		}
	}
}
